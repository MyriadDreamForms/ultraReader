@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-800 dark:text-gray-200 mb-6">@ViewData["Title"]</h1>
    
    <div class="max-w-md mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Yeni şifrenizi belirleyin</h2>
            <hr class="mb-6 border-gray-200 dark:border-gray-700" />
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>
                <input asp-for="Input.Code" type="hidden" />
                
                <div class="mb-4">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">E-posta</label>
                    <input asp-for="Input.Email" class="w-full px-4 py-2 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" 
                           autocomplete="email" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Yeni Şifre</label>
                    <input asp-for="Input.Password" class="w-full px-4 py-2 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" 
                           autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="mb-6">
                    <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Şifre Onayı</label>
                    <input asp-for="Input.ConfirmPassword" class="w-full px-4 py-2 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" 
                           autocomplete="new-password" aria-required="true" placeholder="••••••••" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="flex items-center justify-between">
                    <button type="submit" class="py-2 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                        Şifreyi Sıfırla
                    </button>
                    
                    <a asp-page="./Login" class="text-sm text-primary hover:text-primary-dark transition-colors">
                        Giriş sayfasına dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 