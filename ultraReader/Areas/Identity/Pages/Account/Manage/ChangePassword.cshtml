@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-xl font-semibold text-gray-800 dark:text-gray-200 mb-4">@ViewData["Title"]</h3>
<hr class="mb-6 border-gray-200 dark:border-gray-700" />

<partial name="_StatusMessage" for="StatusMessage" />

<div class="max-w-lg">
    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>
        
        <div class="mb-4">
            <label asp-for="Input.OldPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Eski Şifre</label>
            <input asp-for="Input.OldPassword" class="w-full px-4 py-2 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" 
                   autocomplete="current-password" aria-required="true" />
            <span asp-validation-for="Input.OldPassword" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="mb-4">
            <label asp-for="Input.NewPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Yeni Şifre</label>
            <input asp-for="Input.NewPassword" class="w-full px-4 py-2 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" 
                   autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.NewPassword" class="text-red-500 text-sm"></span>
        </div>
        
        <div class="mb-6">
            <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Yeni Şifre (Tekrar)</label>
            <input asp-for="Input.ConfirmPassword" class="w-full px-4 py-2 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" 
                   autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>
        
        <button type="submit" class="inline-flex items-center justify-center py-2 px-6 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors">
            <i class="bi bi-check-circle mr-2"></i> Şifreyi Değiştir
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 