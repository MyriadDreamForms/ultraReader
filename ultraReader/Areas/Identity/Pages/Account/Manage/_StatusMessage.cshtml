@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Hata") || Model.StartsWith("Başarısız") ? "bg-red-50 dark:bg-red-900/20 border-red-400 dark:border-red-600 text-red-700 dark:text-red-300" : "bg-green-50 dark:bg-green-900/20 border-green-400 dark:border-green-600 text-green-700 dark:text-green-300";
    var iconClass = Model.StartsWith("Hata") || Model.StartsWith("Başarısız") ? "bi-exclamation-circle text-red-500 dark:text-red-400" : "bi-check-circle text-green-500 dark:text-green-400";
    
    <div class="@statusMessageClass border-l-4 p-4 mb-6 rounded-md">
        <div class="flex items-start">
            <i class="@iconClass bi mr-2 text-xl flex-shrink-0 mt-0.5"></i>
            <p>
                @Model
            </p>
        </div>
    </div>
} 