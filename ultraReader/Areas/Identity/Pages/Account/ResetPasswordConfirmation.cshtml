@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Şifre Sıfırlama Onayı";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-800 dark:text-gray-200 mb-6">@ViewData["Title"]</h1>
    
    <div class="max-w-md mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="flex items-center justify-center mb-6">
                <i class="bi bi-check-circle text-5xl text-green-500"></i>
            </div>
            
            <h2 class="text-xl font-semibold mb-4 text-center text-gray-800 dark:text-gray-200">Şifreniz başarıyla sıfırlandı</h2>
            
            <div class="text-center mb-6">
                <p class="text-gray-700 dark:text-gray-300">
                    Şifreniz başarıyla değiştirildi. Artık yeni şifrenizle giriş yapabilirsiniz.
                </p>
            </div>
            
            <div class="text-center">
                <a asp-page="./Login" class="inline-flex items-center justify-center px-6 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                    <i class="bi bi-box-arrow-in-right mr-2"></i> Giriş Yap
                </a>
            </div>
        </div>
    </div>
</div> 