@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-2xl md:text-3xl font-bold text-gray-800 dark:text-gray-200 mb-6">@ViewData["Title"]</h1>
    
    <div class="max-w-md mx-auto">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4 text-gray-800 dark:text-gray-200">Şifrenizi mi unuttunuz?</h2>
            <hr class="mb-6 border-gray-200 dark:border-gray-700" />
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4" role="alert"></div>
                
                <div class="mb-6">
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">E-posta</label>
                    <input asp-for="Input.Email" class="w-full px-4 py-2 rounded-md border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 focus:border-primary focus:ring focus:ring-primary focus:ring-opacity-50" 
                           autocomplete="email" aria-required="true" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="mb-4">
                    <button type="submit" class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary hover:bg-primary-dark focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                        Şifre Sıfırlama Bağlantısı Gönder
                    </button>
                </div>
                
                <div class="text-center mt-6">
                    <p class="text-sm text-gray-600 dark:text-gray-400">
                        <a asp-page="./Login" class="text-primary hover:text-primary-dark transition-colors">
                            Giriş sayfasına dön
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 