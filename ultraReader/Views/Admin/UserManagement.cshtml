@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container mt-4">
    <h1>Kullanıcı Yönetimi</h1>
    <hr />

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Email</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                <a asp-controller="Admin" asp-action="AssignRoles" asp-route-userId="@user.Id" class="btn btn-sm btn-primary">Rolleri Yönet</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">Henüz kullanıcı yok.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary mt-3">Geri Dön</a>
</div> 