@model ultraReader.Models.DTOs.ExtendedErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container py-5 fade-in">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="card shadow-lg border-0 rounded-lg overflow-hidden">
                <div class="card-header bg-danger text-white py-3">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-3 fs-3"></i>
                        <h1 class="h4 mb-0 fw-bold">Hata Oluştu</h1>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="error-container text-center py-4">
                        <div class="error-code mb-4">
                            <span class="display-1 fw-bold text-danger opacity-50">!</span>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.Message))
                        {
                            <div class="alert alert-danger py-3 mb-4 shadow-sm">
                                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>@Model.Message</h5>
                            </div>
                        }
                        else
                        {
                            <h5 class="text-danger mb-4">İşleminiz sırasında beklenmedik bir hata meydana geldi.</h5>
                        }

                        @if (Model.ShowRequestId)
                        {
                            <div class="text-muted mt-3 mb-4 small border-top border-bottom py-2">
                                <strong>İstek ID:</strong> <code>@Model.RequestId</code>
                            </div>
                        }
                    </div>
                    
                    <div class="d-flex flex-column flex-sm-row justify-content-center gap-2 mt-4">
                        <a href="/" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door me-2"></i>Ana Sayfaya Dön
                        </a>
                        <button class="btn btn-outline-secondary btn-lg" onclick="window.history.back();">
                            <i class="bi bi-arrow-left me-2"></i>Geri Dön
                        </button>
                    </div>
                </div>
                <div class="card-footer bg-light py-3 text-center text-muted">
                    <small>Sorun devam ederse lütfen site yöneticisiyle iletişime geçin.</small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .fade-in {
        animation: fadeIn 0.5s ease-in-out;
    }
    
    
    
    .error-code {
        position: relative;
    }
    
    .error-code::before {
        content: "404";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 8rem;
        font-weight: bold;
        color: rgba(220, 53, 69, 0.05);
        z-index: -1;
    }
</style>